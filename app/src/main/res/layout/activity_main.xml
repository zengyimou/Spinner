<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.mib.spinner.MaterialSpinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/bg_white_line_333333_cor4"
        android:textAlignment="center"
        android:textSize="12sp"
        app:ms_background_color="@android:color/white"
        app:ms_popupwindow_height="wrap_content"
        app:ms_popupwindow_maxheight="200dp"
        app:ms_text_color="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>